barrage called trianglespray
	bullet called slowbullet
		speed is 20
		do action
			set speed to 100 over 1 seconds

	action called start
		fire slowbullet in aimed direction 0
		wait 1 frames
		do action
			fire slowbullet in incremental direction (triangle(repeatCount/20*3)*10) at incremental speed 5
			wait 1 frames
			repeat 60 times
